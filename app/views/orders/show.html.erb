<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>
<table class="table table-striped table-bordered">
  <thead>
    <td>Product</td>
    <td>Quantity</td>
  </thead>
<% @order.order_details.each do |detail| %>
  <tr>
    <td><%= Product.find(detail.product_id).title%></td>
    <td><%= detail.qty%>
  </tr>
<% end %>
</table>
  
<p>
  <strong>Total:</strong>
  <%= @order.total %>
</p>

