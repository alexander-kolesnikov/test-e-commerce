<p id="notice"><%= notice %></p>
<div class="col-xs-3 col-md-3">
  <%= render partial: "admin/categories/categories_menu" %>
</div>

<div class="col-xs-9 col-md-9">
<h3>Products</h3>
  <div id="products" class="row list-group">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Stock level</th>
          <th>Image</th>
          <th><%= link_to 'New Product', new_admin_product_path, class: "btn btn-default"%></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= truncate(product.description, length: 150) %></td>
            <td><%= product.price %></td>
            <td><%= product.stock_level %></td>
            <td><%= image_tag attachment_url(product, :image, :fill, 50, 50) %></td>
            <td>
              <%= link_to 'Show', admin_product_path(product) , class: "btn btn-default" %>
              <%= link_to 'Edit', edit_admin_product_path(product) , class: "btn btn-default" %>
              <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<nav>
  <ul class="pagination">
    <li>
      <%= paginate @products%>
    </li>
  </ul>
</nav>
<%= link_to 'New Product', new_admin_product_path %>
